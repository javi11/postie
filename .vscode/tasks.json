{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "wails:dev:frontend",
			"type": "shell",
			"command": "wails",
			"args": ["dev", "-skipbindings"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "wails",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting frontend Dev Server.*$",
					"endsPattern": "^.*Frontend Dev Server started.*$|^.*Dev server started.*$|^.*Wails.*$"
				}
			}
		},
		{
			"label": "Start Web Backend",
			"type": "shell",
			"command": "go",
			"args": ["run", "cmd/web/main.go", "-p", "8080"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "go-web-server",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*server.*$|^.*Listening.*$",
					"endsPattern": "^.*Server.*started.*$|^.*Listening.*on.*$|^.*server.*running.*$"
				}
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "Stop Web Backend",
			"type": "shell",
			"command": "pkill",
			"args": ["-f", "cmd/web/main.go"],
			"group": "build"
		}
	]
}
