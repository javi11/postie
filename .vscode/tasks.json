{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wails:dev:frontend",
            "type": "shell",
            "command": "wails",
            "args": ["dev", "-skipbindings"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "wails",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting frontend Dev Server.*$",
                    "endsPattern": "^.*Frontend Dev Server started.*$|^.*Dev server started.*$|^.*Wails.*$"
                }
            }
        }
    ]
} 