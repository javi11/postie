{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug postie",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "-v",
                "-c",
                "${workspaceFolder}/config.yaml",
                "-d",
                "${workspaceFolder}/test_files"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug postie (with watcher)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "watch",
                "-v",
                "-c",
                "${workspaceFolder}/config.yaml",
                "-w",
                "${workspaceFolder}/test_files",
                "-o",
                "${workspaceFolder}/output_files"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug postie (with custom paths)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "-c",
                "${input:configPath}",
                "-d",
                "${input:dirPath}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "showLog": true,
            "trace": "verbose"
        }
    ],
    "inputs": [
        {
            "id": "configPath",
            "type": "promptString",
            "description": "Path to config file",
            "default": "${workspaceFolder}/config.yaml"
        },
        {
            "id": "dirPath",
            "type": "promptString",
            "description": "Directory containing files to upload",
            "default": "${workspaceFolder}/test_files"
        }
    ]
} 